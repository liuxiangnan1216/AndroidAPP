<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lxn.batterykpirunservice"
    android:sharedUserId="android.uid.system">

    <application
        android:allowBackup="true"
        android:persistent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".service.BatteryRunService"
            android:priority="1000" />
        <service android:name=".service.KeepAliveService"
            android:priority="1000" />

        <receiver
            android:name=".broadcast.ShutdownReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <!-- 关机广播 -->
                <action android:name="android.intent.action.ACTION_SHUTDOWN" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".broadcast.StandbyReceiver">
        </receiver>

        <!--receiver
            android:name=".TimeTickReceiver">
        </receiver-->

    </application>

</manifest>